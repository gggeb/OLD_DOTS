#!/bin/sh

OPTIONS="LAUNCH\nPOWER"
ANSWER=$(echo "$OPTIONS" | dmenu)

LAUNCH() {
    exec dmenu_run
}

POWER() {
    OPTIONS="LOG OFF\nSHUTDOWN\nREBOOT"
    case $(echo "$OPTIONS" | dmenu) in
        "LOG OFF")
            bspc quit
            ;;
        "SHUTDOWN")
            sudo poweroff
            ;;
        "REBOOT")
            sudo reboot
            ;;
    esac
}

$ANSWER
