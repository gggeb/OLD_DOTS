#!/bin/sh

OPTIONS="LAUNCH\nOUTPUT\nPOWER"
ANSWER=$(echo "$OPTIONS" | dmenu)

LAUNCH() {
    OPTIONS="WEB BROWSER\nPDF VIEWER\nIMAGE EDITOR\nTERMINAL\n..."
    ANSWER=$(echo "$OPTIONS" | dmenu)

    case $ANSWER in
        "WEB BROWSER")
            exec firefox
            ;;
        "PDF VIEWER")
            exec zathura
            ;;
        "IMAGE EDITOR")
            exec gimp
            ;;
        "TERMINAL")
            exec st
            ;;
        "...")
            exec dmenu_run
            ;;
    esac
}

OUTPUT() {
    OPTIONS="DATE\nPACKAGES"
    ANSWER=$(echo "$OPTIONS" | dmenu)

    DATE() { date '+%a %d %b' | tr "[:lower:]" "[:upper:]"; }
    PACKAGES() { echo "INSTALLED PACKAGES: $(xbps-query -l | wc -l)"; }

    notify-send "$($ANSWER)"
}

POWER() {
    OPTIONS="LOG OFF\nSHUTDOWN\nREBOOT"
    case $(echo "$OPTIONS" | dmenu) in
        "LOG OFF")
            bspc quit
            ;;
        "SHUTDOWN")
            sudo poweroff
            ;;
        "REBOOT")
            sudo reboot
            ;;
    esac
}

$ANSWER
