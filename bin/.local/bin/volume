#!/bin/sh

usage() {
    echo "USAGE: volume <up|down|toggle>"
}

case $1 in
    [uU][pP])
        pamixer -i 3
        ;;
    [dD][oO][wW][nN])
        pamixer -d 3
        ;;
    [tT][oO][gG][gG][lL][eE])
        pamixer -t
        ;;
    *)
        >&2 echo "invalid argument '$1'!"
        exit
        ;;
esac

if [ "$(pamixer --get-mute)" = "false" ]; then
    notify-send -u low "VOLUME: $(pamixer --get-volume)%"
else
    notify-send -u low "MUTED"
fi
